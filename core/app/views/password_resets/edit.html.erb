<%= provide(:title, 'Reset password') %>

<div class='password-reset-form-container'>
    <h2 class='form-title'>Reset password</h2>
    <%= form_with(model: @user, url: password_reset_path(params[:id]), html: { class: 'form' }) do |f|%>
    <%= render 'shared/error_messages' %>

    <%= hidden_field_tag :email, @user.email %>
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-with-border" %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-with-border" %>
    <%= f.submit "Update password", class: "form-button" %>
    <% end %>
</div>