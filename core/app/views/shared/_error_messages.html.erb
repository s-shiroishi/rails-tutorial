<% if @user.errors.any? %>
    <div>
        <div>
            The form contains <%= pluralize(@user.errors.count, "error") %>
        </h2>
        <div>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>