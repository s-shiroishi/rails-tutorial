<% if @user.errors.any? %>
<div class="error_messages">
    <div class="error_title">
        The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>